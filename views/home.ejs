<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All pizzas</title>
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
</head>
<body>

  <section>
    <nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-dark mb-4">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Pizzeria</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarText">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/pizzas">All Pizzas</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/pizzas/cart">Your Cart</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/pizzas/veg">Veg Pizzas</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/pizzas/nonveg">Non-Veg Pizzas</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </section>


  <div class="container">
    <a href="/pizzas/veg" class="btn btn-success mb-4">Veg</a>
    <a href="/pizzas/nonveg" class="btn btn-warning mb-4">Non-Veg</a>
  </div> 


<div class="container">
  <div class="row row-cols-1 row-cols-md-2 g-4">
    <% for(let pizza of pizzas){ %>
      <div class="col-lg-4 mb-3">
        <div class="card border-dark" style="width: 22rem;">
          <img src="<%= pizza.image %>" class="card-img-top card_img" alt="...">
          <div class="card-body">
            <h5 class="card-title"> <%= pizza.name%> </h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= pizza.type %></h6>
            <p class="card-text"><%= pizza.description %> </p>
            <p class="card-text"><h6>Price: <%= pizza.price %> </h6></p>

            <!-- <form action="/pizzas" method="POST">
            <label class="form-label mb-3" for="qty">Quantity:</label>
            <input class="form-input" id="qty" type="number">
            </form> -->

            
            <a href="/pizzas/<%= pizza._id %>" class="btn btn-success mr-2"><i class="fas fa-link"></i> View Pizza </a>
            <a href="/pizzas/<%= pizza._id %>/cart" class="btn btn-primary">Add to cart</a>
          </div>
        </div>
      </div>
    <% } %> 
  </div>
    <a href="/pizzas/cart" class="btn btn-lg btn-primary mb-3">My cart</a>
</div>





<footer class="footer bg-dark py-4 mt-auto">
    <div class="container">
        <span class="text-muted">&copy; Pizza 2022</span>
    </div>
</footer>


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script> 

</body>
</html>